{
  "manifest_version": 3,
  "name": "Todo Manager Flavien",
  "version": "1.0.0",
  "description": "Gestionnaire de t√¢ches avec onglets Perso, GitHub et Gmail",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "identity"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle Todo Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}